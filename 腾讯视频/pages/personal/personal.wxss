.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.btn-area{
  border-top:2rpx solid #cdcdcd; 
  overflow: hidden;
}
.avv{
  margin-top: 30rpx;
  height: 100rpx;
  font-size: 34rpx;
  color: #666;
  line-height: 100rpx;
  padding-left: 120rpx;
  float: left;
}
.userinfo{
  margin-bottom: 70rpx;
}
