/*---观看历史记录----  */
.history{
  width: 100%;
  height: 390rpx;
  background: #dbdbdb;
  padding-top: 30rpx;
  position: relative;
}
.historyWrap{
  width: 100%;
  background: #fff;
  padding-left: 30rpx;
  overflow: hidden;
}
.zi{
  font-size: 30rpx;
  font-weight: bold;
  float: left;
  line-height: 140rpx;
}
.historyWrap image{
  width: 40rpx;
  height: 40rpx;
  float: right;
  margin-right: 50rpx;
  margin-top: 50rpx;
}
.historyImg{
  width: 100%;
  white-space:nowrap;
  background: #fff;
  height: 252rpx;
}
.tIMG{
  width: 300rpx;
  height: 200rpx;
  display:inline-block;
  margin-left: 30rpx;
}
.tIMG image{
  width: 300rpx;
  height: 200rpx;
}
.shezhi{
  width: 100%;
  background: #dbdbdb;
  padding-top: 30rpx;
  overflow: hidden;
  height: 200rpx;
}
.shezhi image{
  width: 40rpx;
  height: 40rpx;
  float: right;
  margin-right: 50rpx;
  margin-top: 50rpx;
}